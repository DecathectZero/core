{
  "name": "@logux/core",
  "version": "0.5.3",
  "description": "Logux core components",
  "keywords": [
    "logux",
    "core",
    "connection",
    "websocket",
    "crdt",
    "event sourcing",
    "distributed systems"
  ],
  "scripts": {
    "spell": "yaspeller-ci *.md",
    "clean": "rimraf coverage/",
    "test": "jest-ci --coverage && eslint-ci . && check-dts && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/core",
  "sideEffects": false,
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "nanoevents": "^5.1.7"
  },
  "devDependencies": {
    "@logux/eslint-config": "^39.0.3",
    "@logux/sharec-config": "^0.7.3",
    "@types/jest": "^25.2.3",
    "@types/ws": "^7.2.4",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "check-dts": "^0.3.0",
    "dual-publish": "^0.10.2",
    "eslint": "^7.1.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-prettierx": "^0.12.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^20.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.2.7",
    "nanodelay": "^1.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.3",
    "ws": "^7.3.0",
    "yaspeller-ci": "^1.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "no-invalid-this": "off"
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\).",
      "\\d+\\.\\d+ \\W"
    ],
    "dictionary": [
      "Versioning",
      "JSDoc",
      "js",
      "logux",
      "GraphQL",
      "WebSocket",
      "io",
      "ES",
      "TypeDoc",
      "roadmap"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.7.3"
  }
}
