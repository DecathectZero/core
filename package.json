{
  "name": "@logux/core",
  "version": "0.7.0",
  "description": "Logux core components",
  "keywords": [
    "logux",
    "core",
    "connection",
    "websocket",
    "crdt",
    "event sourcing",
    "distributed systems"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage && eslint . && check-dts && yaspeller *.md"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/core",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js"
  },
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "dependencies": {
    "nanoevents": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@logux/eslint-config": "^45.4.1",
    "@logux/sharec-config": "^0.10.1",
    "@types/jest": "^26.0.23",
    "@types/ws": "^7.4.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "check-dts": "^0.4.4",
    "clean-publish": "^2.1.1",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^31.0.0",
    "jest": "^27.0.0-next.2",
    "lint-staged": "^10.5.4",
    "nanodelay": "^2.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.4.1",
    "ts-jest": "^27.0.0-next.4",
    "typescript": "^4.2.4",
    "ws": "^7.4.5",
    "yaspeller": "^7.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "no-invalid-this": "off"
    },
    "overrides": [
      {
        "files": [
          "server-connection/*.ts",
          "ws-connection/*.ts"
        ],
        "rules": {
          "import/order": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\).",
      "\\d+\\.\\d+ \\W"
    ],
    "dictionary": [
      "Versioning",
      "JSDoc",
      "js",
      "logux",
      "GraphQL",
      "WebSocket",
      "io",
      "ES",
      "TypeDoc",
      "roadmap",
      "ESM"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.10.1"
  }
}
